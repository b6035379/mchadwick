<div class="card card-default">
	<div class="card-body">
		<div class="row">
			<div class="col-md-4">
					<%= image_tag @product.image.url,  size:'360x240' %>
					<div class="table-responsive">
						<table class="table">
							<tbody>
								</br><tr>
									<td><strong>Product Name:</strong></td>
									<td><%= @product.pName %></td>
								</tr>
								<tr>
									<td><strong>Brand:</strong></td>
									<td><%= @product.brand %></td>
								</tr>
								<tr>
									<td><strong>Average Cost:</strong></td>
									<td><%= @product.averageCost %></td>
								</tr>
								<tr>
									<td><strong>Category:</strong></td>
									<td><%= @product.category %></td>
								</tr>
								<tr>
									<td><strong>Release Date:</strong></td>
									<td><%= @product.releaseDate %></td>
								</tr>
								<tr>
									<td><strong>Description:</strong></td>
									<td><%= @product.description %></td>
								</tr>

							</tbody>

						</table>
						<%= link_to "Add a review", new_product_review_path(@product) %>
					</div>
			</div>

				<div class="col-md-7 col-md-offset-1" align="center">
					<h1 class="review_title"><%= @product.pName %> Reviews</h1>

					<% if @reviews.blank? %>
					<h3>No Reviews addded yet, would you like to add the first?</h3>
					<%= link_to "Add First Review", new_product_review_path(@product), class:"btn btn-primary btn-lg" %>
					<% else %>

					<% @reviews.each do |review| %>
					<div class="reviews">
						<p><%= review.rating %></p>
						<p><%= review.reviewText %></p>
					</div>
					<% end %>
					<% end %>
			</div>
		</div>
	</div>

</div>
