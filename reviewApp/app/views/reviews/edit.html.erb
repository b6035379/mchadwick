<div class="container">
	<h1>editReview</h1>
		<%= form_for [@product,@review] do |f| %>
		<div class="form-group">
			<%= f.label "Product Rating:" %>
			<%= f.select :rating, [[1],[2],[3],[4],[5]], {class: "form-control"} %>
		</div>
		<div class="form-group" multi-line="true">

			<%= f.label :reviewText %>
			<%= f.text_area :reviewText, class:'form-control' %>
		</div>
		<div class="form-group">
	
			<%= f.date_field :reviewDate, :value => Time.now.strftime("%Y-%m-%d"), class:'form-control', :readonly => true, hidden: true %>
		</div>


		<div class="form-group">
			<%= f.submit "Submit", class: 'btn btn-primary' %>
		</div>

		<div class="form-group">
			<%= link_to "Cancel", :back %>
		</div>

		<% end %>
	</div>

