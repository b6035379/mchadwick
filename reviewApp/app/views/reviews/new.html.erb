<div class="container">
	<h1>Add New Product</h1>
		<%= form_for :review, url: reviews_path do |f| %>
		<div class="form-group">
			<%= f.label :author %>
			<%= f.text_field :author, class:'form-control' %>
		</div>
		<div class="form-group">
			<%= f.label :productRating %>
			<%= f.select(:productRating, [1,2,3,4,5], {}, {:class =>"form-control"}) %>
		</div>
		<div class="form-group">
			<%= f.label :reviewContent %>
			<%= f.text_field :reviewContent, class:'form-control' %>
		</div>
		<div class="form-group">
			<%= f.label :dateOfReview %>
			<%= f.date_field :dateOfReview, :value => Time.now.strftime('%Y-%m-%d'), :disabled => true %>
		</div>
		<div class="form-group">
			<%= f.label :productID %>
			<%= f.number_field :productID, class:'form-control' %>
		</div>


		<div class="form-group">
			<%= f.submit "Submit", class: 'btn btn-primary' %>
		</div>

		<div class="form-group">
			<%= link_to "Cancel", reviews_path %>
		</div>

		<% end %>
	</div>