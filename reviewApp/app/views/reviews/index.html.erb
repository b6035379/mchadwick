<p id="notice"><%= notice %></p>

<h1>Reviews</h1>


<%= link_to 'New Review', new_product_review_path %>
<% if @reviews.blank? %>
          <h3>No Reviews addded yet, would you like to add the first?</h3>
          <%= link_to "Add First Review", new_product_review_path(@product), class:"btn btn-primary btn-lg" %>
          <% else %>
<div class="card">
  <div class="card card-body">
          <% @reviews[0,6].each do |review| %>
          <div class="reviews">
            <p><%= review.author %> | <%= review.reviewDate %> | <div class="star-rating" data-score= <%= review.rating %> ></div></p> <!--From Raty, uses stars with the data attached to the review.rating-->
            <p><%= review.reviewText %></p>
            <td><%= link_to 'View Full Review', review_path(review) %></td>
          </div>
          <% end %>
          <% end %>
        </div></div>

<br>


          <!--script from raty-->
<script>
  $('.star-rating').raty({
    path: '/assets/',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
</script>