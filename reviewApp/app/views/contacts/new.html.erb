<div class="container">
	<h2>Contact Us</h2>
	<%= form_for :contact, url: new_contact_form_path do %>

	<%= email_field_tag :email, nil, placeholder: 'Enter Your Email', class: 'form-control' %>
	<%= text_field_tag :message, nil, placeholder: 'Enter Your Message', class: 'form-control' %>


	<%= submit_tag "Send Email", class: 'btn btn-primary' %>
	<% end %>
</div>